{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "skipLibCheck": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "forceConsistentCasingInFileNames": false,
    "esModuleInterop": true,

    // Type checking
    // "allowUnreachableCode": false,
    // "allowUnusedLabels": false,
    // "alwaysStrict": true,
    // "strict": true,
    // "exactOptionalPropertyTypes": true,
    // "noFallthroughCasesInSwitch": true,
    // "noImplicitThis": false,
    // "noImplicitOverride": true,
    // "noUncheckedIndexedAccess": true,
    // "useUnknownInCatchVariables": true,

    "paths": {
      "@Feature/users": [
        "libs/features/users/src"
      ],
      "@Feature/users/*": [
        "libs/features/users/src/*"
      ],
      "@Feature/friendships": [
        "libs/features/friendships/src"
      ],
      "@Feature/friendships/*": [
        "libs/features/friendships/src/*"
      ],
      "@Feature/providers": [
        "libs/features/providers/src"
      ],
      "@Feature/providers/*": [
        "libs/features/providers/src/*"
      ],
      "@Feature/interests": [
        "libs/features/interests/src"
      ],
      "@Feature/interests/*": [
        "libs/features/interests/src/*"
      ],
      "@Feature/texts": [
        "libs/features/texts/src"
      ],
      "@Feature/texts/*": [
        "libs/features/texts/src/*"
      ],
      "@Feature/personalities": [
        "libs/features/personalities/src"
      ],
      "@Feature/personalities/*": [
        "libs/features/personalities/src/*"
      ],
      "@Feature/recommendations": [
        "libs/features/recommendations/src"
      ],
      "@Feature/recommendations/*": [
        "libs/features/recommendations/src/*"
      ],
      "@Feature/rates": [
        "libs/features/rates/src"
      ],
      "@Feature/rates/*": [
        "libs/features/rates/src/*"
      ],
      "@Feature/messages": [
        "libs/features/messages/src"
      ],
      "@Feature/messages/*": [
